    <script type="text/javascript">

        //select seat controller
        $('.cinema-seats .seat').on('click', function () {
            var i = parseInt($('#adult').val()) + parseInt($('#child').val());
            if ($('#cinema-seats-counter .active').length < i) {
                $(this).toggleClass('active');
            } else if ($('#cinema-seats-counter .active').length == i) {
                $(this).removeClass('active');
            }

        });

        //input change value
        $("#adult").on("change keyup paste click", function () {
            $('#seat').val(parseInt($('#adult').val()) + parseInt($('#child').val()));
            $('#total').val(((parseInt($('#adult').val()) * 150) + (parseInt($('#child').val()) * 120)) + 'THB')
        })
        $("#child").on("change keyup paste click", function () {
            $('#seat').val(parseInt($('#adult').val()) + parseInt($('#child').val()));
            $('#total').val(((parseInt($('#adult').val()) * 150) + (parseInt($('#child').val()) * 120)) + 'THB')
        })
